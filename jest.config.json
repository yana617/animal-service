{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
        "<rootDir>/src/tests/fixtures/setup.ts"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 80,
            "functions": 80,
            "lines": 80,
            "statements": 80
        }
    },
    "coveragePathIgnorePatterns": [
        "<rootDir>/src/migrations/"
    ]
}